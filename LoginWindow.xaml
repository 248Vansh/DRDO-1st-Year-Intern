<Window x:Class="DRDO.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Secure Login"
        Height="400"
        Width="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True">

    <!-- Gradient Background -->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F0F8FF" Offset="0.0"/>
            <GradientStop Color="#D6EAF8" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <!-- Window Resources -->
    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect"
                          BlurRadius="15"
                          ShadowDepth="4"
                          Direction="320"
                          Opacity="0.3"
                          Color="Black"/>
    </Window.Resources>

    <Grid>
        <!-- Main Card Container -->
        <Border Width="400"
                Padding="30"
                Background="White"
                CornerRadius="15"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Effect="{StaticResource DropShadowEffect}">
            <StackPanel>
                <!-- Heading -->
                <TextBlock Text="🔐 DRDO GIS LOGIN"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#0078D7"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Subtitle -->
                <TextBlock Text="ArcGIS OAuth Sign-in"
                           Foreground="Gray"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Sign-in Button -->
                <Button Content="Sign In with ArcGIS"
                        Click="LoginButton_Click"
                        Background="#0078D7"
                        Foreground="White"
                        Padding="12"
                        FontSize="16"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,0,10">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="8" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#005A9E"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Exit Button -->
                <Button Content="Exit"
                        Click="CloseApp"
                        Background="Transparent"
                        Foreground="#0078D7"
                        BorderBrush="Transparent"
                        FontWeight="Bold"
                        Padding="10"
                        Cursor="Hand"
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

